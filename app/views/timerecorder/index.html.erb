<h1>Time Records</h1>
<!-- <%= stylesheet_link_tag "application.css" %> -->
<table>
  <tr>
    <th>Date</th>
    <th>AM In</th>
    <th>AM Out</th>
    <th>PM In</th>
    <th>PM Out</th>
  </tr>
 
<% @dr.each do |dr| %>
  <tr class="<%= cycle('oddrow', 'evenrow') -%>">
    <td><%= dr.logdate %></td>
    <td><%= dr.amintime.in_time_zone('London').strftime('%H:%M') %></td>
    <td><%= dr.amouttime.in_time_zone.strftime('%H:%M') %></td>
    <td><%= dr.pmintime.in_time_zone.strftime('%H:%M') %></td>
    <td><%= dr.pmouttime.in_time_zone.strftime('%H:%M') %></td>
  </tr>
<% end %>
</table>
<table>
  <tr>
    <th>Time</th>
    <th>In/Out</th>
  </tr>
 
<% @tr.each do |tr| %>
  <tr class="<%= cycle('oddrow', 'evenrow') -%>">
    <td><%= tr.time %></td>
    <td><%= tr.recordtype %></td>
  </tr>
<% end %>
</table>
